{
  "name": "revup-vscode",
  "displayName": "revup-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "revup.configOAuth",
        "title": "Configure Revup OAuth Key"
      },
      {
        "command": "revup.configGithubUsername",
        "title": "Configure Revup GitHub Username"
      },
      {
        "command": "revup.openConfig",
        "title": "Open Revup Configuration File"
      },
      {
        "command": "revup.upload",
        "title": "Revup Upload",
        "icon": "$(cloud-upload)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "revup.upload",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
